<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/absl_submenu_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="fill"
    android:layout_marginTop="0dp"
    tools:context=".GBA_launcher"
    tools:ignore="Deprecated,Overdraw" >

    <ImageView
        android:id="@+id/ivGameBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ivLoadAnim"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_x="530dp"
        android:layout_y="280dp"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ivBattStatus"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_x="540dp"
        android:layout_y="0dp"
        android:src="@drawable/ui_batt_100"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/lbCurTime"
        android:layout_width="176dp"
        android:layout_height="28dp"
        android:layout_x="359dp"
        android:layout_y="0dp"
        android:gravity="right|center_vertical"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="10"
        android:text="24/7 21:59"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/ivSideMenu"
        android:layout_width="164dp"
        android:layout_height="fill_parent"
        android:layout_x="404dp"
        android:layout_y="0dp"
        android:scaleType="matrix"
        android:src="@drawable/ui_side_menu"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

</AbsoluteLayout>